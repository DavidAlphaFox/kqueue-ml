(library
 (name kqueue)
 (flags :standard -w -9-27-32-34)
 (foreign_stubs
  (language c)
  (flags -Werror -Wall -pedantic -Wunused)
  (names kqueue_generated_stubs))
 (libraries kqueue_stubs kqueue_constants ctypes ctypes.stubs unix))

(rule
 (targets generate_kqueue_constants.c)
 (action
  (with-stdout-to
   %{targets}
   (run ../c/stubgen/generate_kqueue_constants.exe))))

(rule
 (targets generate_kqueue_constants_ocaml)
 (deps
  (:c_code ./generate_kqueue_constants.c))
 (action
  (run %{ocaml-config:c_compiler} -I %{lib:ctypes:} -I
    %{ocaml-config:standard_library} -o %{targets} %{c_code})))

(rule
 (targets kqueue_generated_constants.ml)
 (action
  (with-stdout-to
   %{targets}
   (run ./generate_kqueue_constants_ocaml))))

(rule
 (targets kqueue_generated_stubs.ml)
 (action
  (with-stdout-to
   %{targets}
   (run ../c/stubgen/generate_kqueue_stubs_ml.exe kqueue_stubs))))

(rule
 (targets kqueue_generated_stubs.c)
 (action
  (with-stdout-to
   %{targets}
   (run ../c/stubgen/generate_kqueue_stubs_c.exe kqueue_stubs))))
